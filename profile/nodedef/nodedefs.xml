<nodeDefs>

  <!-- === Harmony Nub Server Holds all Hub Nodes ========================================  -->

  <nodeDef id="HarmonyHubServer" nodeType="139" nls="HARMONYHUBSERVER">
    <sts>
      <!-- Device Status -->
      <st id="ST" editor="INTEGER" />
      <!-- Version Major -->
      <st id="GV1" editor="FLOAT" />
      <!-- Version Minor -->
      <st id="GV2" editor="FLOAT" />
      <!-- Number of Hubs -->
      <st id="GV3" editor="INTEGER" />
      <!-- Debug Mode -->
      <st id="GV4" editor="DEBUGMODE" />
    </sts>
    <cmds>
      <sends>
	<cmd id="DON" />
      </sends>
      <accepts>
	<cmd id="QUERY" />
	<cmd id="REFRESH_CONFIG" />
	<cmd id="BUILD_PROFILES" />
        <cmd id="SET_DEBUGMODE">
          <p id="" editor="DEBUGMODE" init="GV4"/>
        </cmd>
      </accepts>
    </cmds>
  </nodeDef>

  <!-- === Family Room Hub ============================================================  -->

  <nodeDef id="FamilyRoom" nodeType="139" nls="HARMONYHUB">
    <sts>
      <st id="ST" editor="HUBST" />
      <st id="GV3" editor="ActFamilyRoom" />
    </sts>
    <cmds>
      <sends>
	<cmd id="DON" />
      </sends>
      <accepts>
        <cmd id="SET_ACTIVITY">
          <p id="" editor="ActFamilyRoom" init="GV3"/>
        </cmd>
	<cmd id="REBOOT" />
	<cmd id="QUERY" />
      </accepts>
    </cmds>
  </nodeDef>

